# Copy to .env and fill in values

# OpenRouter (required for embedding and LLM calls)
OPENROUTER_API_KEY=<your_openrouter_api_key>
EMBEDDING_MODEL=<openrouter_embedding_model_id>
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# SurrealDB
SURREALDB_PORT=8010
SURREALDB_USER=<surrealdb_root_user>
SURREALDB_PASS=<surrealdb_root_password>
SURREALDB_NAMESPACE=<surrealdb_namespace>
SURREALDB_DATABASE=<surrealdb_database>

# RabbitMQ
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672
RABBITMQ_USER=<rabbitmq_user>
RABBITMQ_PASS=<rabbitmq_password>

# MCP Service Ports
MCP_EMBEDDING_PORT=8004
MCP_STORAGE_PORT=8005
MCP_WEB_SEARCH_PORT=8006
MCP_WEB_CRAWLER_PORT=8007

# Search
SEARCH_MAX_RESULTS=10
